<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:fitsSystemWindows="true"
    tools:context="com.nora.nsh.nora.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/nsh" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center">



        <TextView
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Welcome"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="60sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/top1"
            android:layout_width="260dp"
            android:layout_height="2dp"
            android:layout_below="@+id/top"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-4dp"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top1"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_horizontal"
            android:text="Test App"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:id="@+id/box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:visibility="invisible"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffffff" />

                <Button
                    android:id="@+id/one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple11"
                    android:elevation="4dp"
                    android:fontFamily="sans-serif-condensed"
                    android:onClick="one"
                    android:visibility="invisible"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:text="transition"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:transitionName="@string/string1">


                </Button>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffffff" />

                <Button
                    android:id="@+id/two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple12"
                    android:elevation="4dp"
                    android:fontFamily="sans-serif-condensed"
                    android:onClick="two"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:text="animation"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:transitionName="@string/string2"
                    android:visibility="invisible">

                </Button>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffffff" />

                <Button
                    android:id="@+id/third"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple13"
                    android:elevation="4dp"
                    android:fontFamily="sans-serif-condensed"
                    android:onClick="third"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:text="effects"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:transitionName="@string/string3"
                    android:visibility="invisible">

                </Button>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffffff" />

                <Button
                    android:id="@+id/four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple14"
                    android:elevation="4dp"
                    android:fontFamily="sans-serif-condensed"
                    android:onClick="four"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:text="app bar"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:transitionName="@string/string4"
                    android:visibility="invisible">

                </Button>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffffff" />

                <Button
                    android:id="@+id/five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple15"
                    android:elevation="4dp"
                    android:fontFamily="sans-serif-condensed"
                    android:onClick="five"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:text="fragments"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:transitionName="@string/string5"
                    android:visibility="invisible">

                </Button>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffffff" />

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:background="@drawable/ripple"
            android:fontFamily="sans-serif-condensed"
            android:foreground="@drawable/ripple1"
            android:onClick="click"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Lets Go!!"
            android:textColor="#ffffff"

            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible" />

    </RelativeLayout>


</FrameLayout>

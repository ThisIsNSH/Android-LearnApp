<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.nora.nsh.nora.one">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/nsh" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple11"
            android:fontFamily="sans-serif-condensed"
            android:clickable="false"
            android:paddingBottom="16dp"
            android:paddingTop="40dp"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:transitionName="@string/string1">


        </Button>
        <RelativeLayout
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:elevation="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transition"
                android:textAllCaps="true"
                android:id="@+id/text"
                android:fontFamily="sans-serif-condensed"
                android:textSize="45sp"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:layout_marginTop="24dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:elevation="4dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:id="@+id/scroll"

                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple3"
                    android:elevation="4dp"
android:text=""
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"> </Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple3"
                    android:elevation="4dp"
                    android:layout_margin="8dp"> </Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple3"
                    android:elevation="4dp"
                    android:layout_margin="8dp"> </Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple3"
                    android:elevation="4dp"
                    android:layout_margin="8dp"> </Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple3"
                    android:elevation="4dp"
                    android:layout_margin="8dp"> </Button>

            </LinearLayout>

        </ScrollView>

        </RelativeLayout>



    </FrameLayout>


</RelativeLayout>
